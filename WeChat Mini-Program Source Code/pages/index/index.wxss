/**index.wxss**/

.container,
page {
  height: 100%;
  width: 100%
}
.text1{
  font-weight: bold;
  color: #160227;
  font-size: 24px;
  margin-top: 10px;
}
.text2{
  font-weight: bold;
  color: #7730b4;
  font-size: 21px;
  margin-top: 10px;
}

.container {
  position: relative;
  overflow: hidden;
  background-size: 100% 100%
}

.one {
  position: absolute;
  top: 0;
  left: 0
}

.one .one-one {
  width: 100%;
  height: 52%;
  opacity: 0
}

.one .one-two {
  position: absolute;
  top: 35%;
  left: 25%;
  opacity: 0;
  width: 50%;
  height: 5%
}

.one .one-three {
  top: 41%;
  font-size: 34rpx
}

.one .one-four,
.one .one-three {
  position: absolute;
  left: 26%;
  opacity: 0;
  font-weight: 700;
  color: #be6fff
}

.one .one-four {
  top: 46%;
  background-color: #fff;
  border-radius: 5rpx;
  padding: 2rpx;
  font-size: 24rpx
}

.one .one-five {
  top: 50%;
  left: 32%;
  padding: 2rpx;
  font-size: 26rpx;
  color: #be6fff
}

.one .one-five,
.two {
  position: absolute;
  opacity: 0
}

.two {
  top: 0;
  left: 0
}

.two .two-one {
  top: 40%
}

.two .two-one,
.two .two-two {
  position: absolute;
  left: 25%;
  opacity: 0;
  width: 50%;
  height: 25%
}

.two .two-two {
  top: 35%
}

.two .two-four,
.two .two-three {
  position: absolute;
  top: 40%;
  left: 25%;
  opacity: 0;
  width: 50%;
  height: 20%
}

.bottom-top {
  bottom: 8%
}

.bottom-one,
.bottom-top {
  position: absolute;
  opacity: 0;
  height: 20%;
  width: 100%
}

.bottom-one {
  bottom: 10%
}

.bottom-one2 {
  bottom: 10%;
  right: -100%
}

.bottom-one2,
.bottom-two {
  position: absolute;
  opacity: 0;
  height: 20%;
  width: 100%
}

.bottom-two {
  bottom: 5%
}

.bottom-two2 {
  height: 20%;
  bottom: 5%;
  right: -100%
}

.bottom-three,
.bottom-two2 {
  position: absolute;
  opacity: 0;
  width: 100%
}

.bottom-three {
  height: 18%;
  bottom: 0
}

.bottom-three2 {
  height: 18%;
  right: -100%
}

.bottom-four,
.bottom-three2 {
  position: absolute;
  opacity: 0;
  width: 100%;
  bottom: 0
}

.bottom-four {
  height: 20%
}

.bottom-four2 {
  position: absolute;
  opacity: 0;
  height: 20%;
  width: 100%;
  bottom: 0;
  right: -100%
}

.bottom-1s-move {
  opacity: 1;
  animation: a 4s linear infinite
}

.bottom-2s-move {
  opacity: 1;
  animation: a 6s linear infinite
}

.bottom-3s-move {
  opacity: 1;
  animation: a 8s linear infinite
}

.bottom-4s-move {
  opacity: 1;
  animation: a 10s linear infinite
}

.two-music-one {
  opacity: 1;
  animation: b .5s linear infinite
}

.two-music-two {
  opacity: 1;
  animation: c .5s linear infinite
}

@keyframes a {
  0% {
    transform: translateX(0)
  }

  to {
    transform: translateX(-100%)
  }
}

@keyframes b {
  0% {
    opacity: 1;
    transform: translateY(0)
  }

  50% {
    opacity: 1;
    transform: translateY(20rpx)
  }

  to {
    opacity: 1;
    transform: translateY(0)
  }
}

@keyframes c {
  0% {
    opacity: 1;
    transform: translateY(0)
  }

  50% {
    opacity: 1;
    transform: translateY(-30rpx)
  }

  to {
    opacity: 1;
    transform: translateY(0)
  }
}
